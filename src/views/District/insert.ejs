<%-include ("../public/ejspub/header.ejs")%>
    <div class="row">
        <div class="col-md-6 offset-md-3" style="background-color: #fff;margin-top: 25px;padding:20px;">
            <h3>Add District</h3>
            <form id="formup">
                <div class="form-group">
                    <label>District Name</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
                    <a class="btn btn-secondary" onclick="window.location.href='/district'"><i class="fa fa-list-alt"></i> View All</a>
                </div>
            </form>
        </div>
    </div>
    <%-include ("../public/ejspub/footer.ejs")%>
    <script>
        $(document).ready(function(){
            $("#formup").submit(function(e){
                e.preventDefault();
                var data = $("#formup").serialize();
                $.ajax({
                    type: "post",
                    url: "/district/insert",
                    data: data,
                    dataType: "json",
                    success: function (response) {
                        window.location.href="/district"
                    }
                });
            })
        })
    </script>