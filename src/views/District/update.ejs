<%-include ("../public/ejspub/header.ejs")%>
    <div class="col-md-6 offset-md-3" style="background-color: #fff;margin-top: 25px;padding:20px;">
        <h3>Edit District Name</h3>
        <form id="formup">
            <div class="form-group col-md-6">
                <label>District Name</label>
                <input type="text" class="form-control" name="name" value="<%=data.name%>">
            </div>
            <div class="form-group">
                <button type="submit" value="<%=data._id%>" id="sup" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
                <a class="btn btn-secondary" onclick="window.location.href='/district'"><i class="fa fa-list-alt"></i> View All</a>
            </div>
        </form>
    </div>
<%-include ("../public/ejspub/footer.ejs")%>
<script>
    $(document).ready(function(){
        $("#formup").submit(function(e){
            e.preventDefault();
            var data = $("#formup").serialize();
            $.ajax({
                type: "put",
                url: "/district/"+$("#sup").val()+"/update",
                data: data,
                dataType: "json",
                success: function (response) {
                    window.location.href="/district"
                },
                error:function(e){
                    alert('loi');
                }
            });
        })
    })
</script>