                                <td>
                                    <h6><b>Rent price: </b>
                                        <%=item.rentprice%>
                                    </h6>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h6><b>Description: </b>
                                        <%=item.note%>
                                    </h6>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <button id="tuan1" type="button" class="btn btn-success" data-toggle="modal"
