<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Web Quản Lý Cho Thuê Nhà Đất</title>
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet"
        type="text/css" />
    <link
        href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800"
        rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="css/cssBuilding/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/string-strip-html/dist/string-strip-html.umd.js"></script>


    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"> -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body>
    <!-- Navigation-->
    <%-include ("../public/ejspub/header.ejs")%>
        <!-- Page Header-->

        <div class="container">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Rent Area</th>
                        <th>Address</th>
                        <th>Rent Type</th>
                        <th>Manager Name</th>
                        <th>Manager Phone</th>
                        <th>Rent Price</th>
                        <th>Sell Price</th>
                        <th>Note</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <%listBuilding.forEach(item=>{%>
                        <tr>
                            <td>
                                <%=item.name%>
                            </td>
                            <td>
                                <%=item.rentarea%>
                            </td>
                            <td>
                                <%=item.address%>
                            </td>
                            <td>
                                <%=item.renttypes%>
                            </td>
                            <td>
                                <%=item.managername%>
                            </td>
                            <td>
                                <%=item.managerphone%>
                            </td>
                            <td>
                                <%=item.rentprice%>
                            </td>
                            <td>
                                <%=item.sellprice%>
                            </td>
                            <td>
                                <%=item.note%>
                            </td>
                            <td>
                                <image src="<%=item.imagelink%>" width="300" height="300"></image>
                            </td>
                            <td>
                                <button id="update" data-toggle="tooltip" title="Update" class="btn btn-default" onclick="up(value)"
                                    value=<%=item._id%>><i class="fas fa-user-edit"></i></button>
                                <button type="button" data-toggle="modal" class="btn btn-default" 
                                    data-target="#myModal" data-toggle="tooltip" title="Delete" >
                                    <i class="fas fa-minus-circle"></i>
                                </button>
                            </td>
                        </tr>
                        <% })%>
                </tbody>
            </table>
        </div>



        <!-- The Modal -->
        <div class="modal fade" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Confirm</h4>
                        <button type="button" class="close" data-dismiss="modal">×</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        Are you want detele it ??
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button id="xoamodal" type="button" class="btn btn-danger" >OK</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>

                </div>
            </div>

            <script>
                function up(value){
                    window.location.href = "/building/" + value + "/update";
                }
                $('#xoamodal').click(function(){
                    $.ajax({
                        type: "delete",
                        url: "/building/"+$('#update').val()+"/delete",
                        dataType: "json",
                        success: function (response) {
                            location.reload();
                        },
                        error:function(){
                            alert("loi");
                        }
                    });
                })

            </script>


            <!-- Core theme JS-->
            <script src="/js/scripts.js"></script>

</body>

</html>